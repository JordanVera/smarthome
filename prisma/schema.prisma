generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  clerkId      String   @unique
  authProvider String? // stores the provider (e.g., 'google', 'apple', 'email')
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  estimates Estimate[]

  @@map("users")
}

